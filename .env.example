# ── LLM provider ─────────────────────────────────────────────────
# Supported: ollama, openai, groq, together
LLM_PROVIDER=ollama

# -- Ollama (local dev) -------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral

# -- API-based (production) — uncomment & fill for your provider --
# LLM_PROVIDER=groq
# LLM_API_KEY=gsk_your_key_here
# LLM_API_BASE=                          # auto-detected per provider
# LLM_MODEL=mixtral-8x7b-32768

# ── Embedding model ──────────────────────────────────────────────
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# ── Text splitter ────────────────────────────────────────────────
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ── Retriever ────────────────────────────────────────────────────
RETRIEVER_K=5

# ── Shared LLM settings ─────────────────────────────────────────
LLM_TEMPERATURE=0.2
